{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "web-app-creator",
  "title": "Web App Creator",
  "description": "Instantly turn any website into a beautiful native macOS app with dedicated Chrome profile, real .icns icon, blocked notifications, and zero first-run prompts.",
  "icon": "icon.png",
  "author": "imcodingideas",
  "owner": "imcodingideas",
  "categories": [
    "Productivity",
    "Developer Tools",
    "Web"
  ],
  "keywords": [
    "web app",
    "pwa",
    "chrome",
    "native app",
    "macos app",
    "wrapper",
    "site-specific browser",
    "ssb",
    "fluid",
    "nativefier"
  ],
  "license": "MIT",
  "access": "public",
  "commands": [
    {
      "name": "create-web-app",
      "title": "Create Web App",
      "subtitle": "Web App Creator",
      "description": "Create a standalone macOS app from any website with dedicated profile and real icon",
      "mode": "view",
      "keywords": [
        "make app",
        "website to app",
        "pwa",
        "wrapper"
      ]
    }
  ],
  "preferences": [
    {
      "name": "chromeExecutable",
      "type": "textfield",
      "required": false,
      "title": "Chrome Executable Path",
      "description": "Full path to Google Chrome executable",
      "default": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
      "placeholder": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
    },
    {
      "name": "installLocation",
      "type": "dropdown",
      "required": false,
      "title": "Install Location",
      "description": "Where to save created apps",
      "default": "user",
      "data": [
        {
          "title": "User Apps (~/Applications/WebApps)",
          "value": "user"
        },
        {
          "title": "System Apps (/Applications)",
          "value": "system"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.103.6",
    "@raycast/utils": "2.2.2"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "@types/react": "19.2.2",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint",
    "fix-lint": "ray lint --fix",
    "publish": "npx @raycast/api@latest publish"
  }
}
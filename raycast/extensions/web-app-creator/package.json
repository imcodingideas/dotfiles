{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "web-app-creator",
  "title": "Web App Creator",
  "description": "Create standalone web applications from any URL with automatic icon fetching",
  "icon": "command-icon.png",
  "author": "imcodingideas",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create-web-app",
      "title": "Create Web App",
      "subtitle": "Web App Creator",
      "description": "Create a standalone macOS application from any website URL",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "chromeExecutable",
      "type": "textfield",
      "required": false,
      "title": "Chrome Executable Path",
      "description": "Path to Google Chrome (default: /Applications/Google Chrome.app)",
      "default": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
      "placeholder": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
    },
    {
      "name": "installLocation",
      "type": "dropdown",
      "required": false,
      "title": "Install Location",
      "description": "Where to install web apps",
      "default": "user",
      "data": [
        {
          "title": "~/Applications/WebApps",
          "value": "user"
        },
        {
          "title": "/Applications",
          "value": "system"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "1.103.6",
    "@raycast/utils": "2.2.2"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "@types/react": "19.2.2",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "typescript": "5.9.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}